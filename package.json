{
	"name": "ground",
	"version": "3.0.0",
	"description": "WordPress starter theme for front-end developers",
	"license": "MIT",
	"type": "module",
	"scripts": {
		"dev": "npm run clean && npm-run-all -p \"styles -- --watch\" \"js -- --watch\" sync",
		"build": "npm-run-all clean js \"styles -- --env production\"",
		"styles": "postcss src/css/main.css -o dist/css/ground-styles.min.css --verbose",
		"sync": "browser-sync start --no-open -p 'https://ground.develop:444' -f 'dist/css/ground-styles.min.css' '**/*.php' 'dist/js/ground-scripts.min.js' -w",
		"js": "vite build",
		"clean": "rm -rf ./dist/"
	},
	"homepage": "https://github.com/fabioquarantini/ground",
	"author": {
		"name": "Fabio Quarantini",
		"url": "http://www.fabioquarantini.com"
	},
	"browserslist": [
		"defaults"
	],
	"devDependencies": {
		"@evoluzione/tailwind-config": "^1.1.0",
		"autoprefixer": "^10.4.16",
		"browser-sync": "^2.29.3",
		"classnames": "2.3.2",
		"cssnano": "^6.0.2",
		"eslint": "^8.56.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-import": "^2.29.1",
		"npm-run-all": "^4.1.5",
		"postcss": "8.4.32",
		"postcss-100vh-fix": "^1.0.2",
		"postcss-cli": "^11.0.0",
		"postcss-for": "^2.1.1",
		"postcss-import": "^15.1.0",
		"postcss-scss": "4.0.9",
		"postcss-simple-vars": "^7.0.1",
		"prettier": "3.1.1",
		"prettier-plugin-tailwindcss": "0.5.9",
		"vite": "5.0.10"
	},
	"dependencies": {
		"@fabioquarantini/js-utils": "^1.0.1",
		"deepmerge": "4.3.1",
		"gsap": "npm:@gsap/shockingly@^3.12.4",
		"infinite-scroll": "4.0.1",
		"ismobilejs": "1.1.1",
		"photoswipe": "5.4.3",
		"swiper": "9.2.4"
	}
}
